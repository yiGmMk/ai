        <guid>https://ai.programnotes.cn/p/pika-ai-%E6%8E%A8%E5%87%BA%E9%9F%B3%E9%A2%91%E9%A9%B1%E5%8A%A8%E8%A7%86%E9%A2%91%E7%94%9F%E6%88%90%E6%A8%A1%E5%9E%8B6-%E7%A7%92%E7%94%9F%E6%88%90%E8%B6%85%E7%9C%9F%E5%AE%9E%E8%A1%A8%E6%83%85%E8%A7%86%E9%A2%91/</guid>
        <description>&lt;p&gt;&lt;a class=&#34;link&#34; href=&#34;https://x.com/pika_labs/status/1954935844936024476&#34;  target=&#34;_blank&#34; rel=&#34;noopener&#34;
